# Firebase Configuration
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control

VITE_API_KEY=your_firebase_api_key_here
VITE_AUTH_DOMAIN=your_project.firebaseapp.com
VITE_DB_URL=https://your_project-default-rtdb.region.firebasedatabase.app
VITE_PROJECT_ID=your_project_id
VITE_STORAGE_BUCKET=your_project.firebasestorage.app
VITE_MSG_SENDER_ID=your_sender_id
VITE_APP_ID=your_app_id
VITE_MEASUREMENT_ID=your_measurement_id

# Security Configuration
VITE_ENABLE_RATE_LIMITING=true
VITE_MAX_LOGIN_ATTEMPTS=5
VITE_RATE_LIMIT_WINDOW=900000
VITE_MIN_PASSWORD_LENGTH=8
VITE_REQUIRE_STRONG_PASSWORDS=true

# Turnstile Configuration
VITE_TURNSTILE_SECRET_KEY=your_turnstile_secret_key_here
VITE_TURNSTILE_BYPASS_DEV=true
VITE_TURNSTILE_SITE_KEY_DEV=1x00000000000000000000AA
VITE_TURNSTILE_SITE_KEY_PROD=your_production_site_key_here